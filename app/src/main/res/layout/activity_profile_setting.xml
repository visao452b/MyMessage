<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileSetting">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_setting"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_send"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            />

        <TextView
            android:id="@+id/userNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"/>
            <EditText
                android:id="@+id/edtLive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_border"
                android:drawableTint="@color/colorPrimary"
                android:drawableStart="@drawable/ic_home_icon_silhouette"
                android:ems="10"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:hint=" Lives in..."
                android:inputType="text"
                android:padding="9dp" />
        <EditText
            android:id="@+id/edtWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_border"
            android:drawableTint="@color/colorPrimary"
            android:drawableStart="@drawable/ic_work"
            android:ems="10"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:hint=" Worked at..."
            android:inputType="text"
            android:padding="9dp" />

<!--        <Spinner-->
<!--            android:id="@+id/spnGender"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:spinnerMode="dropdown"-->
<!--            android:background="@drawable/round_border"/>-->

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:text="Save" />




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>